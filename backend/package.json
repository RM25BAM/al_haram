{
  "name": "@waste-dashboard/backend",
  "version": "1.0.0",
  "description": "Backend API service for the Waste Management Dashboard - A comprehensive platform for monitoring waste collection, tracking trucks, managing waste bins, and generating reports. Built with Fastify, TypeScript, and Socket.IO for real-time updates.",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "pre-commit": "npm run lint && npm run format:check && npm run typecheck"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
    "fastify-plugin": "^4.5.1",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "socket.io": "^4.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "waste-management",
    "dashboard",
    "api",
    "backend",
    "fastify",
    "typescript",
    "socket.io",
    "real-time",
    "monitoring",
    "trucks",
    "bins",
    "reports",
    "environmental",
    "sustainability",
    "logistics"
  ],
  "author": {
    "name": "ENA-Stack",
    "url": "https://github.com/ENA-Stack"
  },
  "license": "MIT",
  "homepage": "https://al-haram-wms.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ENA-Stack/al-haram-wms.git",
    "directory": "backend"
  },
  "bugs": {
    "url": "https://github.com/ENA-Stack/al-haram-wms/issues"
  }
}
